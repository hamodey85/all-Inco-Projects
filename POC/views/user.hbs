<div class="mt-5">
    <h2 class="mb-4">User profile</h2>

    <p><b>First name</b>: {{userData.firstname}}</p>
    <p><b>Last name</b>: {{userData.lastname}}</p>
    <p><b>Email</b>: {{userData.email}}</p>

    <h3 class="mt-5 mb-4">{{userData.firstname}}'s schedules</h3>

    {{#if scheduleData.length}}
        <table class="table mb-5">
            <thead>
                <tr>
                    <th>Day</th>
                    <th>Start at</th>
                    <th>End at</th>
                </tr>
            </thead>
            {{#each scheduleData}}
                <tr>
                    <td>{{getDay day}}</td>
                    <td>{{truncTime start_at}}</td>
                    <td>{{truncTime end_at}}</td>
                </tr>
            {{/each}}
        </table>
    {{else}}
        No schedules yet.
    {{/if}}
</div>